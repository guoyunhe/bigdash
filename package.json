{
  "name": "bigdash",
  "version": "2.0.0",
  "description": "re-implement lodash math functions with big.js",
  "keywords": [
    "big.js",
    "decimal",
    "lodash",
    "math",
    "util"
  ],
  "homepage": "https://github.com/guoyunhe/bigdash#readme",
  "bugs": {
    "url": "https://github.com/guoyunhe/bigdash/issues"
  },
  "repository": "git@github.com:guoyunhe/bigdash.git",
  "funding": "https://github.com/sponsors/guoyunhe",
  "license": "MPL-2.0",
  "author": "Guo Yunhe",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rive build",
    "build:watch": "rive build --watch",
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "format": "rive format",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "start": "rive start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist"
  ],
  "dependencies": {
    "big.js": "^7.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mdx-js/react": "^3.1.0",
    "@types/big.js": "^6.2.2",
    "@types/node": "^22.16.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-ali": "^16.3.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-config-ali": "^1.3.4",
    "react": "^18.3.1",
    "react-doc-ui": "^2.4.0",
    "react-dom": "^18.3.1",
    "rive": "^3.1.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "rive": {
    "template": "base",
    "doc": {
      "basename": "/bigdash/"
    }
  }
}
